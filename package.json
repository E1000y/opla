{
  "name": "opla-backend",
  "version": "0.9.0",
  "private": true,
  "description": "Backend for Opla.ai",
  "main": "index.js",
  "author": "Mik BRY <mik@opla.co>",
  "license": "GPL-2.0+",
  "scripts": {
    "clean-dist": "rm -r -f dist && mkdir dist",
    "compile": "yarn compile:dev && rm -r -f ./dist/config.j*",
    "compile:dev": "yarn clean-dist && babel src -s -D -d dist && cp -f ./package.json ./dist/package.json && cp -f ./LICENSE ./dist/LICENSE && cp -f ./README.md ./dist/README.md",
    "dev": "yarn compile:dev && yarn start:dev",
    "lint": "eslint src",
    "lint:dev": "eslint src --rule 'no-console: off' --fix",
    "prestart": "yarn run -s build",
    "start": "node dist",
    "start:dev": "nodemon -w src --exec \"babel-node src \"",
    "test": "jest"
  },
  "keywords": [
    "Node",
    "ES7",
    "OAuth2"
  ],
  "dependencies": {
    "zoapp-backend": "^0.10.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^22.4.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.8.0",
    "jest": "^22.4.2",
    "nodemon": "^1.13.3",
    "regenerator-runtime": "^0.11.1",
    "supertest": "^3.0.0"
  },
  "jest": {
    "moduleNameMapper": {
      "opla-backend/(.*)": "<rootDir>/src/$1"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setupTests.js"
  }
}
